@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<ShopBanChuot.Models.SANPHAM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}


<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TenSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Gia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().GiamGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().LuotXem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Anh1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Anh2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Anh3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MoTa1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MoTa2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MoTa3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MoTa4)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MoTa5)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SoLuong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MaLoaiSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MaTH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MaXX)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Moi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiamGia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LuotXem)
        </td>
        <td>
            <img src="@item.Anh1" alt="Trống" />
        </td>
        <td>
            <img src="@item.Anh2" alt="Trống" />
        </td>
        <td>
            <img src="@item.Anh3" alt="Trống" />
        </td>
        <td>
            @Html.Raw(item.MoTa1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoTa2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoTa3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoTa4)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoTa5)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LOAISANPHAM.TenLoaiSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.THUONGHIEU.TenTH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.XUATXU.TenXX)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Moi)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaSP }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaSP }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaSP })
        </td>
    </tr>
}

</table>
<div class="pagination">
    <p>Trang:</p>
    <ul>
        @Html.PagedListPager(Model, page => @Url.Action("Index", new { page = page }))
    </ul>
</div>
