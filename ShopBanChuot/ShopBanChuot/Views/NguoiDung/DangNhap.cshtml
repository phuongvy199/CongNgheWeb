
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="mainBody">
    <div class="container">
        <div class="row">
            <!-- Sidebar ================================================== -->
            @Html.Action("Index","Slidebar")
            <!-- Sidebar end=============================================== -->
            <div class="span9">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a> <span class="divider">/</span></li>
                    <li class="active">Login</li>
                </ul>
                <h3>Đăng nhập</h3>
                <hr class="soft">
                <div class="row">
                    <div class="span4">
                        <div class="well">
                            <h5>Đã có tài khoản?</h5>
                            @using (Html.BeginForm())
                            {
                                <div class="control-group">
                                    <label class="control-label" for="inputEmail1">Tên tài khoản</label>
                                    <div class="controls">
                                        @Html.TextBox("txtTenTaiKhoan","admin")
                                        @*<input class="span3" type="text" id="inputEmail1" placeholder="">*@
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="inputPassword1">Mật khẩu</label>
                                    <div class="controls">
                                        @Html.TextBox("txtMatKhau", "admin", new {@type = "password" })
                                        @*<input type="password" class="span3" id="inputPassword1" placeholder="">*@
                                    </div>
                                </div>
                                <p>@ViewBag.ThongBao</p>
                                <div class="control-group">
                                    <div class="controls">
                                        <button type="submit" class="btn-primary btn-large">Đăng nhập</button> <a href=@Url.Action("DangKy")><strong style="font-size:large; margin-left:15px;">Đăng Ký</strong></a>
                                    </div>
                                    
                                </div>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>