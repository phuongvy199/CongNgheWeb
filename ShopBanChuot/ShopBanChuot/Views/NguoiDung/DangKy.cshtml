@model ShopBanChuot.Models.TAIKHOAN

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="mainBody">
    <div class="container">
        <div class="row">
            <!-- Sidebar ================================================== -->
            @Html.Action("Index", "Slidebar")
            <!-- Sidebar end=============================================== -->
            <div class="span9">
                <h2>Đăng ký tài khoản</h2>

                @using (Html.BeginForm())
                {
                     @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <h4>Tạo một tài khoản mới</h4>
                        <hr />
                        @Html.ValidationSummary(true)

                        <div class="form-group">
                            @Html.LabelFor(model => model.TenTaiKhoan, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TenTaiKhoan)
                                @Html.ValidationMessageFor(model => model.TenTaiKhoan) @ViewBag.ThongBaoTrungTK
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.MatKhau, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.MatKhau)
                                @Html.ValidationMessageFor(model => model.MatKhau)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TenKhachHang, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TenKhachHang)
                                @Html.ValidationMessageFor(model => model.TenKhachHang)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.GioiTinh, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.GioiTinh)
                                @Html.ValidationMessageFor(model => model.GioiTinh)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SDT, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.SDT)
                                @Html.ValidationMessageFor(model => model.SDT)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Email)
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.DiaChi, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DiaChi)
                                @Html.ValidationMessageFor(model => model.DiaChi)
                            </div>
                            
                        </div>
                        <p id="ThongBaoDangKy">@ViewBag.DangKyThanhCong</p>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input id="btnSubmit" type="submit" value="Đăng ký" class="btn btn-default" />
                            </div>
                        </div>
                    </div>                   
                }

                @*<script type="text/javascript">
                        $('btnSubmit').click(function() {
                            if ($('#TenTaiKhoan').val() == "") {
                                return false;
                            }
                        });

                    </script>*@
            </div>
        </div>
    </div>
</div>

<style type="text/css">
    div.form-group {
        
    margin-top: 10px;
    margin-bottom: 10px;

    }
    #btnSubmit{
        
    margin-left: 200px;
    margin-top: 20px;
    height: 35px;
    width: 86px;

    }
    #ThongBaoDangKy{
        
    margin-left: 180px;
    margin-top: 10px;
    color:red;
    font-size:medium;
    }

</style>
